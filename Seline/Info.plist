<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleDisplayName</key>
    <string>Seline</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <true/>
    </dict>
    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>
    <key>UILaunchScreen</key>
    <dict/>
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>armv7</string>
    </array>
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- URL Schemes for OAuth callbacks and deep linking -->
    <key>CFBundleURLTypes</key>
    <array>
        <!-- Google OAuth URL Scheme -->
        <dict>
            <key>CFBundleURLName</key>
            <string>GoogleAuth</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <!-- REVERSED_CLIENT_ID from GoogleService-Info.plist -->
                <string>com.googleusercontent.apps.729504866074-jp0dk33q729oh942d70fl7nu68ofnff3</string>
            </array>
        </dict>
        <!-- Supabase OAuth URL Scheme -->
        <dict>
            <key>CFBundleURLName</key>
            <string>SupabaseAuth</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>com.seline.app</string>
            </array>
        </dict>
        <!-- Seline Deep Link URL Scheme -->
        <dict>
            <key>CFBundleURLName</key>
            <string>SelineDeepLink</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>seline</string>
            </array>
        </dict>
    </array>

    <!-- Permissions -->
    <key>NSCalendarsUsageDescription</key>
    <string>Seline needs access to your calendar to help manage your events and schedule.</string>
    <key>NSContactsUsageDescription</key>
    <string>Seline needs access to your contacts to import people into your People page and help with email management.</string>
    <key>NSMicrophoneUsageDescription</key>
    <string>Seline needs access to your microphone for voice commands and email dictation.</string>
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>Seline uses speech recognition to understand your voice queries and help you search through your calendar, notes, and locations.</string>
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Seline needs your location to provide accurate weather information, sunrise/sunset times, and track visits to your favorite locations.</string>
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>Seline needs your location to provide accurate weather information, sunrise/sunset times, and track visits to your favorite locations.</string>
    <key>NSLocationAlwaysUsageDescription</key>
    <string>Seline needs your location to provide accurate weather information, sunrise/sunset times, and track visits to your favorite locations.</string>
    <key>NSFaceIDUsageDescription</key>
    <string>Seline uses Face ID to securely lock and unlock your private notes.</string>
    <key>NSCameraUsageDescription</key>
    <string>Seline needs access to your camera to capture receipts and add photos to your notes.</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>Seline needs access to your photo library to select and attach images to your notes.</string>


    <!-- App Query Schemes (iOS 9+ requirement for canOpenURL) -->
    <key>LSApplicationQueriesSchemes</key>
    <array>
        <string>googlegmail</string>
        <string>x-gmail</string>
        <string>gmail</string>
        <string>comgooglemaps</string>
        <string>weather</string>
        <string>googlechrome</string>
    </array>

    <!-- API Keys -->
    <key>OpenWeatherMapAPIKey</key>
    <string>YOUR_OPENWEATHERMAP_API_KEY_HERE</string>

    <!-- Background Modes for Email Notifications and Location -->
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>processing</string>
        <string>remote-notification</string>
        <string>location</string>
    </array>

    <!-- Background Task Identifiers -->
    <key>BGTaskSchedulerPermittedIdentifiers</key>
    <array>
        <string>com.seline.emailRefresh</string>
        <string>com.seline.emailProcessing</string>
        <string>com.seline.locationRefresh</string>
        <string>com.seline.locationProcessing</string>
    </array>
</dict>
</plist>